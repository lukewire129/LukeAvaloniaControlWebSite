<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:shared="using:lukewireBlog.Components.Shared"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StyleInclude Source="avares://LolPlayButton/Styles.axaml" />
    <Design.PreviewWith>
        <shared:RiotButtonView />
    </Design.PreviewWith>

    <Style Selector="shared|RiotButtonView">
        <!--  Set Defaults  -->
        <Setter Property="Template">
            <ControlTemplate>
                <ToggleButton
                    Classes="lolPlayButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="PART_tg" />
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
