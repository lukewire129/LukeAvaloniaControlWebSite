<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:lukewireBlog.Components"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StyleInclude Source="BlogPanelItem.axaml" />
    <Design.PreviewWith>
        <controls:BlogPanel />
    </Design.PreviewWith>

    <Style Selector="controls|BlogPanel">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="10" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <!--  Set Defaults  -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border
                    Background="#ffffff"
                    BorderBrush="#cccccc"
                    BorderThickness="1"
                    Padding="30">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
